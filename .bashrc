# scripts
alias bpm="~/.scripts/bpm_calculator.py"
alias killdwm="~/.scripts/killdwm.sh"

# git
alias dotfiles="git --git-dir=$HOME/.dotfiles --work-tree=$HOME"

# abbreviations
alias c="clear"
alias l="ls --color=auto"
alias m="makepkg -Si"
alias s="sudo pacman -S"
alias v="nvim"
